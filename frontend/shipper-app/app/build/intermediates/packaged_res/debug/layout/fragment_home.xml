<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brown"
            android:padding="10dp"
            android:elevation="@dimen/cardview_compat_inset_shadow">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/nameShipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shipper: Trần Văn Bánh"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How do you feel today?"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order ID: #fe38abcys938dh45jsog"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="10"/>
                        <TextView
                            android:paddingStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Distance:"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:textAlignment="textEnd"/>
                    </TableRow>
                    <TableRow
                        android:paddingTop="5dp">
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="273 An Duong Vuong, Quận 5, Tp Hồ Chí Minh"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16km"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:paddingTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="10" />
                    </TableRow>
                    <TableRow
                        android:paddingTop="5dp">
                        <TextView
                            android:id="@+id/customerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nguyễn Thị Thùy Linh"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:paddingTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date/Time:"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="10" />
                    </TableRow>
                    <TableRow
                        android:paddingTop="5dp">
                        <TextView
                            android:id="@+id/dateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today, 01-01-2024 10:10"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="10"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>
                <Button
                    android:id="@+id/btnView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/brown"
                    android:text="View more"
                    android:textSize="18sp"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>